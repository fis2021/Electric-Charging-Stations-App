<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fis2021.controllers.StationController">
   <children>
      <Label fx:id="stationNameLabel" alignment="CENTER" prefHeight="90.0" prefWidth="400.0" style="-fx-background-color: #c690c6; -fx-border-color: black;">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutY="349.0" mnemonicParsing="false" onAction="#backButtonOnAction" prefHeight="50.0" prefWidth="400.0" style="-fx-background-color: #ffcc00; -fx-border-color: #ff9900;" text="Back">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="40.0" layoutY="150.0" prefHeight="35.0" prefWidth="90.0" text="Select time:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="148.0" layoutY="135.0" opacity="0.5" text="hour" />
      <Label alignment="CENTER" layoutX="201.0" layoutY="135.0" opacity="0.5" text="minute" />
      <Label alignment="CENTER" layoutX="261.0" layoutY="135.0" opacity="0.5" text="second" />
      <Button fx:id="okButton" layoutX="320.0" layoutY="154.0" mnemonicParsing="false" onAction="#okButtonOnAction" prefHeight="25.0" prefWidth="38.0" style="-fx-background-color: #00FF00; -fx-border-color: green;" text="OK" />
      <Label fx:id="selectBoxMessageLabel" alignment="CENTER" layoutX="14.0" layoutY="195.0" prefHeight="25.0" prefWidth="375.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="hourBox" layoutX="133.0" layoutY="155.0" prefHeight="25.0" prefWidth="55.0" />
      <ComboBox fx:id="minuteBox" layoutX="195.0" layoutY="155.0" prefHeight="20.0" prefWidth="55.0" />
      <ComboBox fx:id="secondBox" layoutX="255.0" layoutY="155.0" prefHeight="20.0" prefWidth="55.0" />
   </children>
</AnchorPane>
