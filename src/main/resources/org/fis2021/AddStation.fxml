<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fis2021.controllers.AddStationController">
   <children>
      <Label layoutX="80.0" layoutY="135.0" text="Station Name :">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="185.0" text="City :">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="235.0" text="Address :">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="stationNameTextField" id="stationName" layoutX="270.0" layoutY="135.0" prefHeight="26.0" prefWidth="290.0" />
      <TextField fx:id="cityTextField" id="cityName" layoutX="270.0" layoutY="185.0" prefHeight="26.0" prefWidth="290.0" />
      <TextField fx:id="addressTextField" id="address" layoutX="270.0" layoutY="235.0" prefHeight="26.0" prefWidth="290.0" />
      <Button fx:id="addStationButton" id="addStation" layoutX="80.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleAddStation" style="-fx-background-color: #FF6347;" text="Add Station" textFill="WHITE" />
      <Button fx:id="goBackToHomePageButton" id="returnToHome" layoutX="400.0" layoutY="350.0" mnemonicParsing="false" onAction="#goBackToTheHomePage" style="-fx-background-color: #FF6347;" text="Go back to the Home Page" textFill="WHITE" />
      <AnchorPane prefHeight="80.0" prefWidth="650.0" style="-fx-background-color: #FF8C00;">
         <children>
            <Label layoutX="245.0" layoutY="25.0" text="Add a new station">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="errorMessage" layoutX="160.0" layoutY="310.0" prefHeight="20.0" prefWidth="330.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
